from ggame import App, Sprite, Color, RectangleAsset, LineStyle
import random
import datetime

Red=Color(0xff0000, 0.9)
Yellow=Color(0xffff00, 0.9)
Green= Color(0x49E20E,1.0)
Blue=Color(0x0000ff, 0.9)
Redlit=Color(0xff0000, 0.7)
Yellowlit=Color(0xffff00, 0.7)
Greenlit=Color(0x49E20E,0.7)
Bluelit=Color(0x0000ff, 0.6)

class Button(Sprite):
     def __init__(self, position,shade):
        line=LineStyle(1,shade)
        test=RectangleAsset(Simon.width/2,Simon.height/2,line,shade)
        super().__init__(test,position)
        
class Simon(App):
    def __init__(self):
        super().__init__()
        self.time=(60*datetime.datetime.now().minute)+(datetime.datetime.now().second)
        self.time2=self.time+5
    def step(self):
        if self.time2 >= (self.time+3):
            self.time=(60*datetime.datetime.now().minute)+(datetime.datetime.now().second)
            choice=random.randint(1,4)
            if choice!=1:
                self.red=Red
                print("no")
            else:
                self.red=Redlit
                print("red")
            if choice!=2:
                self.yellow=Yellow
                print("no")
            else:
                self.yellow=Yellowlit
                print("yellow")
            if choice!=3:
                self.green=Green
                print("no")
            else:
                self.green=Greenlit
                print("green")
            if choice!=4:
                self.blue=Blue
                print("no")
            else:
                self.blue=Bluelit
                print("blue")
            hello=True
            while hello==True:
                self.time2=(60*datetime.datetime.now().minute)+(datetime.datetime.now().second)
            Button((0,0),self.red)
            Button((self.width/2,0),self.yellow)
            Button((self.width/2,self.height/2),self.green)
            Button((0,self.height/2),self.blue)
                
myapp=Simon()
myapp.run()
